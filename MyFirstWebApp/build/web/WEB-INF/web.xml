        <url-pattern>/ActivateForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login2Servler</servlet-name>
        <url-pattern>/Login2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>400</error-code>
        <location>/ErrorInfo.html</location>
    </error-page>
</web-app>
